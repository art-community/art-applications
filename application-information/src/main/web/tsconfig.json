{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "suppressImplicitAnyIndexErrors": true,
    "compileOnSave": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "build", "scripts", "webpack", "jest"]
}